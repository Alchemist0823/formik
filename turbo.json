{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "prepublish": {
      "dependsOn": ["^prepublish"],
      "outputs": ["dist/**"]
    },
    "website#build": {
      "inputs": [
        "../docs/**.md",
        "src/**",
        "scripts/*",
        "public/**",
        "package.json",
        "next.config.js",
        "tsconfig.json",
        "postcss.config.js",
        "tailwind.config.js",
        ".eslintignore"
      ],
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "lint": {}
  }
}
